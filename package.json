{
  "name": "digital_twin_backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend server per Digital Twin con TTS streaming",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "node test.js",
    "worker:llm": "node workers/llmWorker.js",
    "worker:tts": "node workers/ttsWorker.js",
    "workers": "npm run worker:llm & npm run worker:tts",
    "migrate": "node migrations/001_initial_schema.sql",
    "docker:build": "docker build -t digital-twin-backend .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "swarm:deploy": "./scripts/deploy.sh",
    "swarm:scale": "./scripts/deploy.sh scale"
  },
  "dependencies": {
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "openai": "^4.20.0",
    "pg": "^8.11.3",
    "redis": "^5.9.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "digital-twin",
    "ai",
    "websocket",
    "tts",
    "streaming"
  ],
  "author": "Your Name",
  "license": "ISC"
}
